<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= flashcardSet.title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container">
    <header>
        <div>
            <h1><%= flashcardSet.title %></h1>
            <a href="/sets/<%= flashcardSet._id %>/study" class="btn btn-primary">üìö Study This Set</a>
        </div>
        <div style="display: flex; gap: 10px; align-items: center;">
            <a href="/dashboard" class="btn">‚Üê Back to Dashboard</a>
        </div>
    </header>

    <div class="set-details">
        <form action="/sets/<%= flashcardSet._id %>/update-folder" method="POST">
            <label for="folder">Move to folder:</label>
            <select id="folder" name="folder" onchange="this.form.submit()">
                <option value="" <%= !flashcardSet.folder ? 'selected' : '' %>>No folder</option>
                <% folders.forEach(folder => { %>
                    <option
                            value="<%= folder._id %>"
                            <%= flashcardSet.folder && flashcardSet.folder._id.toString() === folder._id.toString() ? 'selected' : '' %>
                    >
                        <%= folder.name %>
                    </option>
                <% }) %>
            </select>
        </form>
    </div>

    <main>
        <h2>Flashcards (<%= flashcards.length %>)</h2>

        <!-- List existing flashcards -->
        <% if (flashcards.length === 0) { %>
            <p class="empty-state">No flashcards yet. Add your first one below!</p>
        <% } else { %>
            <ul class="flashcard-list">
                <% flashcards.forEach(card => { %>
                    <li class="flashcard-item">
                        <strong>Q:</strong> <%= card.question %><br>
                        <strong>A:</strong> <%= card.answer %>
                    </li>
                <% }) %>
            </ul>
        <% } %>

        <!-- Form to add new flashcard -->
        <div class="add-flashcard">
            <h3>Add New Flashcard</h3>
            <form action="/sets/<%= flashcardSet._id %>/cards/add" method="POST">
                <div class="form-group">
                    <label for="question">Question:</label>
                    <input type="text" id="question" name="question" required>
                </div>

                <div class="form-group">
                    <label for="answer">Answer:</label>
                    <input type="text" id="answer" name="answer" required>
                </div>

                <button type="submit" class="btn btn-primary">Add Flashcard</button>
            </form>
        </div>
    </main>
</div>
</body>
</html>