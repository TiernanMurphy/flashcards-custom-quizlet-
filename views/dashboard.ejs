<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Flashcard App</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<div class="container">
    <header>
        <nav>
        </nav>
    </header>

    <main>
        <div class="actions">
            <a href="/sets/new" class="btn btn-primary">+ New Flashcard Set</a>
            <a href="/folders/new" class="btn btn-primary">+ New Folder</a>
        </div>

        <div class="flashcard-sets">
            <h2>Your Flashcard Sets</h2>

            <% if (flashcardSets.length === 0) { %>
                <p class="empty-state">No flashcard sets yet. Create your first one!</p>
            <% } else { %>
                <ul class="sets-list">
                    <% flashcardSets.forEach(set => { %>
                        <li class="set-item">
                            <div style="display: flex; justify-content: space-between; align-items: center; padding: 20px; gap: 15px;">
                                <a href="/sets/<%= set._id %>" style="flex: 1; text-decoration: none; color: inherit;">
                                    <h3><%= set.title %></h3>
                                    <p class="set-meta">
                                        <%= set.cardCount %> cards
                                    </p>
                                </a>

                                <a href="/sets/<%= set._id %>/study" class="emoji-btn">üìö</a>

                                <form action="/sets/<%= set._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this flashcard set? This cannot be undone.');" style="margin: 0;">
                                    <button type="submit" class="emoji-btn">üóëÔ∏è</button>
                                </form>
                            </div>
                        </li>
                    <% }) %>
                </ul>
            <% } %>
        </div>
    </main>
</div>
</body>
</html>